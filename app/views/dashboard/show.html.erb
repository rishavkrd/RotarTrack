<section class="jumbotron  text-center">
  <h1>Howdy <%=@user["nickname"]%>! You are logged in as <%=@user["name"]%>. </h1>
      
</section>
<div>
    <%= link_to 'User Dashboard', accounts_path %>
    <%= link_to 'Create New Event', new_event_path %>
    <%= link_to 'Help', '/dashboard/help' %>
    <%= link_to 'View My Profile (link to be updated)', accounts_path %>
    <%= link_to 'Edit Profile (link to be updated)', accounts_path %>
</div>
<div>
  <h3> My Profile </h3>
    <%= link_to 'View My Profile **fix link**', accounts_path %>
    <%= link_to 'Edit Profile **fix link**', accounts_path %>
    <%= button_to 'Logout', 'auth/logout', method: :get %>
</div>
<div>
  <h3> For Development (to be removed in production) </h3>
    <%= link_to 'Events', events_path %>
    <%= link_to 'Points', points_path %>
    <%= link_to 'Sign Ups', signups_path %>
    <%= link_to 'Statuses', statuses_path %>
    <%= link_to 'Events Type', types_path %>

</div>
<h3> Event List </h3>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <!-- <th>Description</th> -->
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th>Points</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.Title, event %></td>
        <!-- <td><%= event.Description %></td> -->
        <td><%= event.Date %></td>
        <td><%= event.Time %></td>
        <td><%= event.Location %></td>
        <td><%= event.Points %></td>
        <td><%= event.type_id %></td>
        <!-- <td><%= link_to 'Show', event %></td> -->

        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<section class="container">
  <div class="panel panel-default">
    <div class="panel-heading"> **To be Removed** Normalized User Profile</div>
    <div class="panel-body">
      <pre><%= JSON.pretty_generate(@user) %></pre>
    </div>
  </div>
</section>