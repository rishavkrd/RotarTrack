<!-- BODY -->
<div class="flex flex-col md:grid md:grid-flow-col md:grid-cols-3 p-16 gap-8">
  <!-- Column 1 -->
  <div>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Howdy <%= @account["FirstName"].capitalize()%>!</h2>
      </div>
    </div>
  </div>
  <!-- Column 2 -->
  <div>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Card title!</h2>
        <p>If a dog chews shoes whose shoes does he choose?</p>
        <div class="card-actions justify-end">
          <button class="btn btn-primary">Buy Now</button>
        </div>
      </div>
    </div>
  </div>
  <!-- Column 3 -->
  <div>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Upcoming Events</h2>
        <p class="text-slate-500 mb-12">Catch one of the next events, and earn some points to fufill your membership obligations.</p>
        <div class="mb-8">
          <% @events.each do |event| %>
            <div class="flex flex-col w-full p-4 hover:bg-slate-200 transition">
              <a href="<%=url_for event%>">
                <span class="badge mb-2 badge-sm"><%= event.type.Value %></span>
                <div class="flex flex-row items-stretch mb-4">
                  <div class="flex flex-col">
                    <p class="font-bold"><%=event.Title%> â€“ <%= event.Points %> points</p>
                    <p><%= event.Location %></p>
                  </div>
                  <div class="ml-auto flex flex-col">
                    <p class="text-right text-slate-500"><%= event.Date.strftime("%a, %b %-d") %></p>
                    <p class="text-right text-slate-500"><%= event.Time.strftime("%I:%M %p") %></p>
                  </div>
                </div>
                <p class="text-sm"><%= event.Description %></p>
              </a>
            </div>
            <div class='divider'></div>
          <% end %>
        </div>
        <div class="card-actions justify-end">
          <button class="btn btn-primary">View All Events</button>
        </div>
      </div>
    </div>
  </div>
</div>
