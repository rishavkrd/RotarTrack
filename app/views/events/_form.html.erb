  </div>

  <div class="field">
    <%= form.label :Date %>
    <%= form.date_select :Date %>
  </div>

  <div class="field">
    <%= form.label :Time %>
    <%= form.time_select :Time %>
  </div>

  <div class="field">
    <%= form.label :Location %>
    <%= form.text_area :Location %>
  </div>

  <div class="field">
    <%= form.label :Points %>
    <%= form.number_field :Points %>
  </div>

  <div class="field">
    <%= form.label :type_id %>
    <%= form.text_field :type_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
