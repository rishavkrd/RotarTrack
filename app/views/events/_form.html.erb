<%= form_with(model: event) do |form| %>
	<% if event.errors.any? %>
		<div class="alert alert-error" id="error_explanation">
			<div>
				<svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
				<span>
          <p><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</p>
          <span>
            <% event.errors.each do |error| %>
              <p><%= error.full_message %></p>
            <% end %>
          </span>
        </span>
			</div>
		</div>
	<% end %>
	<div class="flex flex-col gap-4 mb-4">
    <div class="form-control">
      <%= form.label :Title %>
      <%= form.text_field :Title, class:"input-bordered input w-full max-w-xs", placeholder:"Event Title" %>
    </div>
    <div class="form-control">
      <%= form.label :Description %>
      <%= form.text_area :Description, class:'max-w-xs' %>
    </div>
    <div class="form-control">
      <%= form.label :Date, class:'label-text' %>
      <div class="flex flex-row gap-2"><%= form.date_select :Date %></div>
    </div>
    <div class="form-control">
      <%= form.label :Time, class:'label-text' %>
      <div class="flex flex-row gap-2 align-center"><%= form.time_select :Time, {minute_step: 15, ampm: true} %></div>
    </div>
    <div class="form-control">
      <%= form.label :Location, class:'label-text' %>
      <%= form.text_field :Location, class:"input-bordered input w-full max-w-xs" %>
    </div>
    <div class="form-control">
      <%= form.label :Points, class:'label-text' %>
      <%= form.number_field :Points, class:"input-bordered input w-full max-w-xs" %>
    </div>
    <div class="form-control">
      <%= form.label :type_id, class:'label-text' %>
      <%= form.collection_select :type_id, Type.all, :id, :Value %>
    </div>
  </div>
	<div class="actions">
		<%= form.submit class:'btn btn-primary' %>
	</div>
<% end %>
