<%= form_with(model: signup) do |form| %>
  <% if signup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(signup.errors.count, "error") %> prohibited this signup from being saved:</h2>

      <ul>
        <% signup.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.hidden_field :event_id, value: @event_id%>
  </div>
  
  <div class="field">
    <%= form.hidden_field :account_id, value: @account_id%>
  </div>

  <div class="form-control mb-8 flex flex-row gap-4">
    <%= form.label "I will need a ride:", class:'label-text' %>
    <%= form.check_box :Pickup, class:'checkbox' %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn'%>
  </div>
<% end %>
