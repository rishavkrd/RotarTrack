<%= link_to 'Back to Dashboard', dashboard_url %>

<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>UIN</th>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.UIN %></td>
        <td><%= account.FirstName%> <%= account.LastName%></td>
        <td><%= account.PhoneNumber %></td>
        <td><%= account.Email %></td>
        <td><%= account.status.Value.capitalize() %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Archive', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add Points', new_point_path(account_id: account.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
