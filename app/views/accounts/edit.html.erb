<h1>Editing Account</h1>

<% if @account.uuid == session[:useruuid] || @account.status_id == 2 %>
  <%= render 'form', account: @account %>

  <%= link_to 'Show', @account %> |
  <%= link_to 'Back', '/dashboard' %>
<% else %>
  <h1>Sorry, you are not an officer, therefore, you cannot view this page.</h1>
<% end %>
